  <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js" ></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
  <script>
    $(document).ready(function () {
      bsCustomFileInput.init()
    })
    
    $(function() {
      var appended1 = false;
      var appended2 = false;

      var socket = io();
      socket.on('connection', function(socket) {
        // var url = new URL(window.location.href);
        // var vc = url.searchParams.get("vc");
        // console.log(vc);
        // socket.emit('sendDID', vc);
      })

      socket.on('emitDidVC', function(obj) {
        if (!appended1) {
          appended1 = true;
          $('#did_box .card-body').append('<a id="shareDIDlink" href="' + obj.uri + '" class="card-link">Condividi DID</a>');
          $('#did_box').append('<img src="' + obj.qr + '" class="card-img-top" alt="...">');
        }
      })

      $("#did_box .card-body").on("click", "#shareDIDlink", function() {
        $('#did_box').html('<div class="card-header"><b>Stiamo Controllando il tuo DID...</b></div><div class="spinner-grow text-primary m-5" role="status"> <span class = "sr-only" > Caricamento... < /span> </div>');
      });

      //step 1
      $("#target").submit(function(event) {
        $(this).fadeOut("fast", function() {
          $("#did_box").slideDown("fast");
        });
        event.preventDefault();
      });

      //step 2
      socket.on('emitVC', function(obj) {
        if (!appended2) {
          appended2 = true;
          $('#vc_box .card-body').append('<a id="#shareDIDlink2" href="' + obj.uri + '" class="card-link">Scarica le tue Credenziali</a>');
          $('#vc_box').append('<img src="' + obj.qr + '" class="card-img-top" alt="...">');
          $("#did_box").fadeOut("fast", function() {
            $("#tick").fadeIn("slow", function() {
              setTimeout(function() {
                $("#tick").fadeOut("slow", function() {
                  $("#vc_box").slideDown("fast");
                });
              }, 2000);
            });
          });
        }
      })

      $("#vc_box .card-body").on("click", "#shareDIDlink2", function() {
        $('#vc_box').html('<div class="card-header"><b>Downloading VC...</b></div><div class="spinner-grow text-primary m-5" role="status"> <span class = "sr-only" > Caricamento... < /span> </div>');
      });

    });
  </script>

